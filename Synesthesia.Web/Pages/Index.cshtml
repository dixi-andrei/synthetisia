@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    html, body {
        height: 100%; /* full viewport height */
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1; /* take remaining space between header and footer */
        display: flex;
        flex-direction: column;
    }

    .btn-fractal {
        font-size: 1.4rem;
        padding: 14px 40px;
        border-radius: 50px;
        background: rgba(255,255,255,0.2);
        border: 2px solid rgba(255,255,255,0.4);
        color: white;
        backdrop-filter: blur(8px);
        transition: 0.3s;
        margin-top: 20px;
    }

    .btn-fractal:hover {
        background: rgba(255,255,255,0.4);
        color: #16003B;
    }
</style>

<div class="synesthesia-gradient">
    <img src="~/images/logo.png" alt="Synesthesia Logo" />

    @* <h1 class="display-3 fw-bold">Synesthesia</h1>

    <p class="lead">
        Transform your music into beautiful living fractals.
    </p> *@

    <a class="btn btn-fractal" asp-page="/Studio">
        Experiment with Fractals
    </a>
</div>
